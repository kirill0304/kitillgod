<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Entity.Hall" table="Hall" catalog="kirillgod">

        <id name="ID" type="java.lang.Integer">
            <column name="ID" />
            <generator class="native" />
        </id>

        <property name="Title" type="string">
            <column name="Title" length="20" not-null="true"  />
        </property>

        <property name="NumberOfSeats" type="int" >
            <column name="NumberOfSeats" not-null="true" />
        </property>

        <property name="NumberOfRows" type="int" >
            <column name="NumberOfRows"  not-null="true"  />
        </property>


    </class>

</hibernate-mapping>